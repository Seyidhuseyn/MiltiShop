@using WebApplication1.Models;
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Count</th>
                <th>ImgUrl</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Count</td>
                    <td>@item.ImgUrl</td>
                    <td><a class="btn btn-info" asp-area="Manage" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
